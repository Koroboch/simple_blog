<tr>
   <th scope="row"><%= user.id %></th>
   <td><%= user.username %></td>
   <td><%= user.role %></td>
   <td><%= user.email %></td>
   <td><%= user.created_at %></td>
   <td><%= user.updated_at %></td>
   <td>
      <div class="btn-group">
         <%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-secondary btn-sm me-1"%>    
         <%= button_to 'Delete', admin_user_path(user), method: :delete, form: { data: { 'turbo-confirm': 'Are you sure?' } }, class: "btn btn-danger btn-sm ms-1"%>
      </div>
   </td>
</tr>