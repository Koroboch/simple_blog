<h4 class="text-center"><b>Admin Users</b></h4>
<div class="btn-group">
  <%= link_to 'download zipped XLSX', admin_users_path(format: :zip), class: 'btn btn-secondary' %>
</div>

<hr>

<div class="row">
  <div class="col col-md-2"></div>
  <div class="col col-md-8">
    <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
    <table class="table table-striped table-hove bg-white">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Username</th>
          <th scope="col">Role</th>
          <th scope="col">E-mail</th>
          <th scope="col">Created at</th>
          <th scope="col">Updated at</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
    </table>
    <%== pagy_bootstrap_nav @pagy if @pagy.pages > 1 %>
  </div>
  <div class="col col-md-2"></div>
</div>

<h4 class="text-center"><b>Upload users from XLSX</b></h4>
<div class="row">
  <%= form_with url: admin_users_path do |f| %>
  <div class="col-md-2 col-form-label">
    <%= f.label :archive, 'Select archive' %>
  </div>
  <div class="col-md-10">
    <%= f.file_field :archive, class: 'form-control' %>
  </div>
</div>

<%= f.submit 'Upload', class: 'btn btn-success' %>
<% end %>