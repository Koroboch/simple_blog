<%= turbo_frame_tag @article.comments.new do %>
  <p>
    <%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.text_area :body, required: true, minlength: 4, cols: 30, rows: 4, class: 'form-control', placeholder: 'Type text here' %>
  </p>

  <p><%= f.submit :Create, class: 'btn btn-success' %></p>

  <% end %>
  </p>
<% end %>