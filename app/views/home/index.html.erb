
<h1>Articles</h1>
<% @articles.each do |article| %>
<%= turbo_frame_tag article do %>
  <h4><%= article.title %></h4>
  <p><%= article.text %></p>
  <p6><%= "Posted #{article.username}, in #{article.created_at.strftime("%Y-%m-%d %H:%M")}"%></p6>
  <%= link_to "Edit article",  edit_article_path(article) %>
  <%= link_to "Delete", article, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }%>
  <br>
  <br>
<% end %>
<% end %>