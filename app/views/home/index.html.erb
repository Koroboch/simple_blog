<%= provide :page_title,  t('home.home') %>
<div class="container">
  <br>
  <div class="row">
    <div class="col col-md-2"></div>
    <div class="col col-md-7">
      <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
      <%@articles.each do |article|%>
        <article class="card mt-2">
          <div class="card-header bg-light"><h5><b><%= article.title%></b></h5></div>
          <div class="card-body">
            <section class="card-text">
              <p><%= truncate article.text, length: 300%></p>
              <p6> Published <b><%= "#{article.username}" %></b>, in <%= "#{article.created_at.strftime("%Y-%m-%d %H:%M")}" %></p6>
              <br>
            </section>

            <div class="btn btn-outline-secondary btn-sm">
            <%= link_to 'Open', article_path(article), :class => "btn", :style => "--bs-btn-padding-y: .1rem; --bs-btn-padding-x: .15rem; --bs-btn-font-size: .65rem;"%>
            </div>
          </div>
        </article>
      <%end%>
      <br>
      <%== pagy_bootstrap_nav @pagy %>
    </div>
    <div class="col col-md-3"></div>
  </div>
</div>
